@{
    ViewBag.Title = "Başvuru Başvuru";
 }

<h1 class="h4">Toplanti Katilim Formu</h1>
<form action="">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" id="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="text" name="Phone" id="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" name="Email" id="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="WillAttend" class="form-label">WillAttend</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Ever , Geliyorum</option>
            <option value="false">Hayır , Gelmiyorum</option>

        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>